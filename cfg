#!/bin/bash

set -a # auto-export all env vars

APP_NAMESPACE="$1"
shift

XDG_CONFIG_HOME="${XDG_CONFIG_HOME:-$HOME/.config}"
XDG_CACHE_HOME="${XDG_CACHE_HOME:-$HOME/.cache}"
CONFIG_DIR="${CONFIG_DIR:-$XDG_CONFIG_HOME/$APP_NAMESPACE}"
CONFIG="${CONFIG:-$CONFIG_DIR/config.sh}"

if [ -r "$CONFIG" ]; then
  source "$CONFIG"
fi

CACHE_DIR="${CACHE_DIR:-$XDG_CACHE_HOME/$APP_NAMESPACE}"

exec "$@"
